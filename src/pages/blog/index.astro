---
import BaseHead from '../../components/BaseHead.astro';
import Categories from '../../components/Categories.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';
type DocumentType = {
	urlId: string;
	title: string;
	emoji: string;
	createdAt: string;
};

const response = await fetch('https://app.getoutline.com/api/documents.list', {
	method: 'POST',
	headers: {
		Accept: 'application/json',
		'Content-Type': 'application/json',
		Authorization: 'Bearer ol_api_0lH9OPfWLqBj9tKRucufyBIJjkSzK051fYAbcO'
	},
	body: '{"collectionId":"01e0a648-4b04-44ce-bba5-5da8612a7a32"}'
});

const body = await response.json();
const document = body.data;
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				justify-content: space-between;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				transition: 0.5s;
			}
			ul li {
				width: 40%;
				border: 1px solid black;
				background-color: #fff;
				border-radius: 10px;
				padding: 30px;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li:hover {
				transform: translateY(-5px);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<Categories />
			<section>
				<ul>
					{
						document.map(
							({
								urlId,
								title,
								emoji,
								createdAt
							}: DocumentType) => (
								<li>
									<a href={`/blog/${urlId}/`}>
										<h4 class='title'>
											{`${title} - ${emoji}`}
										</h4>
										<p class='date'>
											<FormattedDate date={createdAt} />
										</p>
									</a>
								</li>
							)
						)
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
